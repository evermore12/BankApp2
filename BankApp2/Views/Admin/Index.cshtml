@model List<Customer>
<div id="foreground">
    <form asp-action="UpdateRoles" asp-controller="Admin" method="post">
        <ul class="list-group list-group-flush">
            @for (int i = 0; i < Model.Count; i++)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <input hidden asp-for="@Model[i].CustomerId" />
                    @Model[i].Givenname
                    @Model[i].CustomerId
                </li>
            }
            <li>@ViewBag.Page</li>
        </ul>
        <div class="mx-auto">
            @if (ViewBag.Page > 0)
            {
                <a class="btn btn-primary" asp-action="Index" asp-controller="Admin" asp-route-page="@(ViewBag.Page - 1)" type="submit">Previous</a>
            }
            <a class="btn btn-primary" asp-action="Index" asp-controller="Admin" asp-route-page="@(ViewBag.Page + 1)" type="submit">Next</a>

        </div>

    </form>
</div>

<div id="menu">

</div>
