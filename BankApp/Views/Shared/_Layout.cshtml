    @RenderBody()
<script>
    $('.ui.accordion').accordion();
    $('.ui.search')
        .search({
            apiSettings: {
                url: 'https://localhost/api/customer/search/{query}'
            },
            fields: {
                results: 'items',
                title: 'givenname',
                url: 'url'
            },
            minCharacters: 3
        });
    </script>
</body>
</html>